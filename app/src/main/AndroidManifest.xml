<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin yang diperlukan disederhanakan -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:label="TaskMate"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskMate"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TaskListActivity" android:exported="false" />
        <activity android:name=".AddTaskActivity" android:exported="false" />
        <activity android:name=".EditTaskActivity" android:exported="false" />
        <activity android:name=".DetailTaskActivity" android:exported="false" />
        <activity android:name=".DeadlineActivity" android:exported="false" />

        <!-- Semua Receiver dan Service dihapus karena tidak digunakan lagi -->

    </application>

</manifest>